<!--Sign up form -->
<section class="blog-container">
        <div class="container">
          <h2>Signup</h2>

          <form class="form signup-form">
            <div class="form-group">
              <label for="name-signup">name:</label>
              <input class="form-input" type="text" id="name-signup" />
            </div>
            
            <div class="form-group">
              <label for="password-signup">password:</label>
              <input class="form-input" type="password" id="password-signup" />
            </div>
            <div class="form-group">
              <button class="btn btn-standard" type="submit">Signup!</button>
            </div>
          </form>
        </div>
      
      <div id="dialog" title="Validation" class="hidden">
        <p>Please enter the username and password.</p>
      </div>
</section>

<script src="./js/signup.js"></script>
