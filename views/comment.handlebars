<!--Display blog plus linked comments plus form for new comment -->
<div class="header-title">Tech-Blog</div> 
<section class="blog-container">

      <div class="blog-post">
        <div class="blog-header flex-row flex-no-wrap align-content-stretch justify-space-between">
              <p class="display-flex blog-title">
                
                  {{blog.title}}
              </p>
              <p class="display-flex">Posted by {{blog.user.name}} on {{format_date blog.date_created}}</p>    
        </div>
        <div class="blog-contents">
            <p>
            {{blog.contents}}
            <!--
            {{#each blog.comments as |comment| }}
            {{comment.contents}}
            {{comment.user_name}}
            {{/each}}
            -->
            </p>
        </div>
      </div>


      <!--All comments-->
      {{#each blog.comments as |comment| }}
      <div class="blog-post">
        <div class="blog-header flex-row flex-no-wrap align-content-stretch justify-space-between">
              <p class="display-flex blog-title">
                Comment by {{comment.user_name}} on {{format_date comment.date_created}}          
              </p>
              
        </div>
        <div class="blog-contents">
            <p>
            {{comment.contents}}
            </p>
        </div>
      </div> 
      {{/each}}

      <!--New comment form -->
      <form class="form new-comment">
      <div class="blog-post">
        <div class="blog-header flex-row flex-no-wrap align-content-stretch justify-space-between">
              <p class="display-flex blog-title">
                  New Comment
              </p>
        </div>
        <div class="blog-contents">
            <div class="form-group">
                  <input id="blog-id" type="hidden" value="{{blog.id}}"/>
                  <textarea class="form-input w-100" type="text" id="comment" name="comment"></textarea>
            </div>        
        </div>
      
      </div>
      <div class="text-center">
          <button type="submit" class="btn btn-standard text-center">Submit</button>
          </div>
      </form>
      <!--dialog for validation -->
      <div id="dialog" title="Validation" class="hidden">
          <p>Please enter your content.</p>
      </div>
</section>
<script src="/js/comment.js"></script>
