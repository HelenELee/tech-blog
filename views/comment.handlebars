<div class="header-title">Tech-Blog</div> 
<section class="blog-container">

<div class="blog-post">
  <div class="blog-header flex-row flex-no-wrap align-content-stretch justify-space-between">
        <p class="display-flex blog-title">
          <!--<a href="/api/blogs/{{blog.id}}">{{blog.title}}</a>-->
            {{blog.title}}
        </p>
        <p class="display-flex">Posted by {{blog.user.name}} on {{format_date blog.date_created}}</p>    
  </div>
  <div class="blog-contents">
      <p>
      {{blog.contents}}
      </p>
  </div>

</div>
<form class="form new-comment">
<div class="blog-post">
  <div class="blog-header flex-row flex-no-wrap align-content-stretch justify-space-between">
        <p class="display-flex blog-title">
            Comment
        </p>
  </div>
  <div class="blog-contents">
      <div class="form-group">
            <input id="blog-id" type="hidden" value="{{blog.id}}"/>
            <textarea class="form-input w-100" type="text" id="comment" name="comment"></textarea>
    </div>        
  </div>
 
</div>
 <div class="text-center">
    <button type="submit" class="btn btn-primary text-center">Submit</button>
    </div>
</form>


</section>
<script src="/js/comment.js"></script>
