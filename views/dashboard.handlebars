<!-- Loop over each object in the projects array -->
<div class="header-title">Dashboard</div> 
<section class="blog-container">


{{#each blogs as |blog| }}
<div class="blog-post">
  <div class="blog-header flex-row flex-no-wrap align-content-stretch justify-space-between">
        <p class="display-flex blog-title">
            <a href="/updatedelete/{{blog.id}}">{{blog.title}}</a>
        </p>
        <p class="display-flex">Posted by {{blog.user.name}} on {{format_date blog.date_created}}</p>    
  </div>
  <!--
  <div class="blog-contents">
      <p>
      {{blog.contents}}
      </p>
  </div>
-->
</div>
  
{{/each}}
<div class="col-md-4">
        <button id="new-post" class="btn btn-lg btn-standard">+ New Post</button>
</div>

</section>
<script src="/js/blog.js"></script>
